<mvc:View
    controllerName="iitp.zui51313.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content> 
                        <Input id="inpTeamNo"
                                maxLength="4"
                                value="{path: '/teamNo',
                                        type: 'iitp.zui51313.model.type.chkTeamNo'
                                        }" 
                                validationError="onError"
                                validationSuccess="onSuccess"
                        ></Input>
                        <Text id="idMesgText"></Text> 
                        <!-- 필요할때만 보이게 하겠다. -->
                        <Button id="idBtn" press="onPress" text="test"></Button>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
