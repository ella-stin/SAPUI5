<mvc:View
    controllerName="iitp.zui51309.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content> 
                        <Input id="idBtn" value="{/lastName}"></Input>
                        <Input value="{/firstName}"></Input>
                        <Button text="Search" press="onPress"></Button>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
